<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.DashboardFragment">

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="@dimen/fagmentDashboard_CardView_Margin"
       android:layout_marginTop="@dimen/fagmentDashboard_CardView_Margin"
       android:layout_marginRight="@dimen/fagmentDashboard_CardView_Margin"
       android:layout_marginLeft="@dimen/fagmentDashboard_CardView_Margin"
       app:cardCornerRadius="@dimen/fragmentDashboard_CardRadius"
       app:cardElevation="@dimen/fragmentDashboard_CardElevation">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:padding="@dimen/fragment_padding">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:id="@+id/name"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="20dp"
               android:id="@+id/email"
               android:layout_marginTop="@dimen/fragmentDashboard_MarginTop"/>
       </LinearLayout>

   </androidx.cardview.widget.CardView>


</FrameLayout>