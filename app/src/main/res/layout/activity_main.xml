<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/LinearLayout_marginStart"
                android:layout_marginTop="@dimen/LinearLayout_marginTop"
                android:layout_marginEnd="@dimen/LinearLayout_marginEnd"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ImageLogo_height"
                    android:src="@drawable/user_logo" />


                   <EditText
                       android:id="@+id/name"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/editText_marginTop"
                       android:layout_marginBottom="@dimen/editText_marginBottom"
                       android:background="@drawable/editdrawable"
                       android:ems="10"
                       android:hint="Name"
                       android:inputType="textPersonName"
                       android:padding="@dimen/editText_padding" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/age"
                        android:layout_width="@dimen/editText_age_Width"
                        android:layout_height="wrap_content"
                        android:background="@drawable/editdrawable"
                        android:layout_marginBottom="@dimen/editText_marginBottom"
                        android:ems="10"
                        android:hint="Age"
                        android:inputType="phone"
                        android:padding="@dimen/editText_padding" />

                    <EditText
                        android:id="@+id/city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/editText_marginStart"
                        android:layout_marginBottom="@dimen/editText_marginBottom"
                        android:background="@drawable/editdrawable"
                        android:ems="10"
                        android:hint="City"
                        android:padding="@dimen/editText_padding" />

                </LinearLayout>


                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/editText_marginBottom"
                    android:background="@drawable/editdrawable"
                    android:ems="10"
                    android:hint="+91 1234567890"
                    android:inputType="phone"
                    android:padding="@dimen/editText_padding" />

                <EditText
                    android:id="@+id/gmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/editText_marginBottom"
                    android:background="@drawable/editdrawable"
                    android:ems="10"
                    android:hint="hello@gmail.com"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/editText_padding" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/editText_marginBottom"
                    android:background="@drawable/editdrawable"
                    android:ems="10"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="@dimen/editText_padding" />


                <Button
                    android:id="@+id/register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_gradient"
                    android:text="Register"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_marginBottom="@dimen/editText_marginBottom"
                    android:textSize="@dimen/Button_textSize"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/showData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_gradient"
                    android:text="Show Data"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_marginBottom="@dimen/editText_marginBottom"
                    android:textSize="@dimen/Button_textSize"
                    android:textStyle="bold"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>