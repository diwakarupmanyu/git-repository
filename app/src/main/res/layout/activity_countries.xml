<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.CountriesActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/relative_layout_padding"
        android:background="@color/gray">

        <EditText
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search here"
            android:imeOptions="actionSearch"
            android:maxLines="1"
            android:background="@drawable/search_bar"
            android:drawableLeft="@drawable/ic_search"
            android:drawablePadding="@dimen/editText_drawablePadding"
            android:padding="@dimen/editText_padding"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activityCountries_marginTop"
                android:layout_alignParentStart="true"
                android:fontFamily="@string/regular"
                android:text="Country Name"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/activityCountries_marginTop"
                android:fontFamily="@string/regular"
                android:text="Total Cases"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/countries">


    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>